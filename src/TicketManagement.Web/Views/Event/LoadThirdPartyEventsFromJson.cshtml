@model LoadJsonViewModel
@inject IViewLocalizer Localizer

<div asp-validation-summary="All"></div>
<form method="post" asp-action="LoadThirdPartyEventsFromJson" asp-controller="Event" enctype="multipart/form-data">
    <div>
        <label>@Localizer["Select json file"]:</label>
        <br />
        <input type="file" id="file" name="file" accept=".json" required />
    </div>
    <div>
        <input type="submit" value="@Localizer["Load events"].Value" />
    </div>
</form>